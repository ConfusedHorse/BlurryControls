<UserControl x:Class="BlurryControls.Controls.BlurryColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image x:Name="RgbMatrixImage" 
               Source="../Resources/Icons/Colors/rgbMatrix1000.png"/>

        <Canvas x:Name="RgbMatrixCanvas"
                MouseDown="RgbMatrixCanvas_MouseDown"
                MouseUp="RgbMatrixCanvas_MouseUp"
                MouseMove="RgbMatrixCanvas_MouseMove"
                MouseEnter="RgbMatrixCanvas_OnMouseEnter"
                MouseLeave="RgbMatrixCanvas_OnMouseLeave"
                Background="Transparent">

            <Line x:Name="YLine"
                  Visibility="Collapsed"
                  Opacity="0.8"
                  Stroke="White"
                  StrokeThickness="1"/>

            <Line x:Name="XLine"
                  Visibility="Collapsed"
                  Opacity="0.8"
                  Stroke="White"
                  StrokeThickness="1"/>
        </Canvas>
    </Grid>
</UserControl>
