<UserControl x:Class="BlurryWindowInvoker.Control.BlurryDogeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:windows="clr-namespace:BlurryControls.Windows;assembly=BlurryControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <windows:BlurryImage x:Name="BlurryDoge" 
                             Source="../Resources/TestImage/doge.jpeg"
                             BlurRadius="50"/>
        <Slider Minimum="0"
                Maximum="100"
                Value="50"
                ValueChanged="RangeBase_OnValueChanged"/>
    </Grid>
</UserControl>
